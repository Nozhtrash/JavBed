~    <script>
~/* =========================
~   ESTADO GLOBAL Y UTILIDADES
~   ========================= */
~let currentLanguage = 'es';
~let isVIP = true; // Simulación de usuario VIP
~let selectedServerType = 'Java';
~let selectedNewsType = 'Java';
~let selectedModsType = 'Java';
~let currentUser = null;
~
~/* =========================
~   NAVBAR Y DROPDOWN USUARIO
~   ========================= */
~document.getElementById('user-menu').addEventListener('click', function(e) {
~    e.stopPropagation();
~    document.getElementById('user-dropdown').classList.toggle('hidden');
~});
~document.addEventListener('click', function(event) {
~    if (!event.target.closest('#user-menu') && !event.target.closest('#user-dropdown')) {
~        document.getElementById('user-dropdown').classList.add('hidden');
~    }
~});
~
~/* =========================
~   TABS DE SKINS
~   ========================= */
~const skinTabs = document.querySelectorAll('.skin-preview ~ .flex button');
~skinTabs.forEach(tab => {
~    tab.addEventListener('click', function() {
~        skinTabs.forEach(t => t.classList.remove('tab-active', 'text-white'));
~        this.classList.add('tab-active', 'text-white');
~        const skinNumber = this.textContent.trim().split(' ')[1];
~        document.getElementById('skin-preview-img').src = `https://mc-heads.net/body/MHF_Steve/${skinNumber}`;
~    });
~});
~
~/* =========================
~   TABS DE TIPO DE SERVIDOR
~   ========================= */
~const javaTab = document.getElementById('java-tab');
~const bedrockTab = document.getElementById('bedrock-tab');
~javaTab.addEventListener('click', function() {
~    javaTab.classList.add('active');
~    javaTab.classList.remove('bg-gray-700');
~    bedrockTab.classList.remove('active');
~    bedrockTab.classList.add('bg-gray-700');
~    selectedServerType = 'Java';
~    filterServers();
~});
~bedrockTab.addEventListener('click', function() {
~    bedrockTab.classList.add('active');
~    bedrockTab.classList.remove('bg-gray-700');
~    javaTab.classList.remove('active');
~    javaTab.classList.add('bg-gray-700');
~    selectedServerType = 'Bedrock';
~    filterServers();
~});
~
~/* =========================
~   FILTROS DE SERVIDORES
~   ========================= */
~document.querySelectorAll('button').forEach(btn => {
~    if (btn.textContent.includes('Aplicar Filtros')) {
~        btn.addEventListener('click', function() {
~            filterServers();
~        });
~    }
~});
~function filterServers() {
~    // Simulación: filtra por versión, modo, país, jugadores
~    const selects = document.querySelectorAll('.bg-gray-800 select');
~    const version = selects[0]?.value || 'Todas';
~    const mode = selects[1]?.value || 'Todos';
~    const country = selects[2]?.value || 'Todos';
~    document.querySelectorAll('.server-card').forEach(card => {
~        let show = true;
~        if (selectedServerType === 'Java' && card.innerHTML.includes('Bedrock')) show = false;
~        if (selectedServerType === 'Bedrock' && !card.innerHTML.includes('Bedrock')) show = false;
~        if (version !== 'Todas' && !card.innerHTML.includes(version)) show = false;
~        if (mode !== 'Todos' && !card.innerHTML.includes(mode)) show = false;
~        if (country !== 'Todos' && !card.innerHTML.includes(country)) show = false;
~        card.style.display = show ? '' : 'none';
~    });
~}
~
~/* =========================
~   BOTONES DE SERVIDORES
~   ========================= */
~document.querySelectorAll('button').forEach(btn => {
~    if (btn.textContent.includes('Añadir Servidor')) {
~        btn.addEventListener('click', function() {
~            alert('Aquí se abriría un formulario para añadir un servidor.');
~        });
~    }
~    if (btn.textContent.includes('Actualizar')) {
~        btn.addEventListener('click', function() {
~            alert('Aquí se actualizaría la lista de servidores.');
~        });
~    }
~    if (btn.textContent.includes('Favorito')) {
~        btn.addEventListener('click', function() {
~            btn.classList.toggle('bg-blue-700');
~            btn.classList.toggle('bg-blue-600');
~            btn.innerHTML = btn.innerHTML.includes('fa-heart') ?
~                '<i class="fas fa-heart mr-1"></i> Favorito' :
~                '<i class="far fa-heart mr-1"></i> Favorito';
~        });
~    }
~    if (btn.textContent.includes('Conectar')) {
~        btn.addEventListener('click', function() {
~            alert('Se copiaría la IP del servidor al portapapeles.');
~        });
~    }
~    if (btn.textContent.includes('Compartir')) {
~        btn.addEventListener('click', function() {
~            alert('Se mostraría un modal para compartir el servidor.');
~        });
~    }
~    if (btn.textContent.includes('Votar')) {
~        btn.addEventListener('click', function() {
~            alert('¡Gracias por tu voto!');
~        });
~    }
~});
~
~/* =========================
~   MODAL DE PERFIL DE SERVIDOR
~   ========================= */
~window.openServerProfile = function(serverId) {
~    document.getElementById('server-profile-modal').classList.remove('hidden');
~    document.body.style.overflow = 'hidden';
~    // Aquí puedes cargar datos dinámicos según serverId
~};
~window.closeServerProfile = function() {
~    document.getElementById('server-profile-modal').classList.add('hidden');
~    document.body.style.overflow = 'auto';
~};
~
~/* =========================
~   FORO Y NUEVO TEMA
~   ========================= */
~document.querySelectorAll('button').forEach(btn => {
~    if (btn.textContent.includes('Nuevo Tema')) {
~        btn.addEventListener('click', function() {
~            alert('Aquí se abriría un formulario para crear un nuevo tema en el foro.');
~        });
~    }
~});
~
~/* =========================
~   MODS Y NOTICIAS TABS
~   ========================= */
~document.querySelectorAll('#news .bg-gray-700').forEach(btn => {
~    btn.addEventListener('click', function() {
~        selectedNewsType = btn.textContent.trim();
~        alert('Filtrar noticias por: ' + selectedNewsType);
~    });
~});
~document.querySelectorAll('#mods .bg-gray-700').forEach(btn => {
~    btn.addEventListener('click', function() {
~        selectedModsType = btn.textContent.trim();
~        alert('Filtrar mods por: ' + selectedModsType);
~    });
~});
~
~/* =========================
~   SKINS MANAGER
~   ========================= */
~document.querySelectorAll('button').forEach(btn => {
~    if (btn.innerHTML.includes('fa-upload')) {
~        btn.addEventListener('click', function() {
~            alert('Aquí se subiría la skin/capa seleccionada.');
~        });
~    }
~    if (btn.textContent.includes('Guardar')) {
~        btn.addEventListener('click', function() {
~            alert('Skin guardada.');
~        });
~    }
~    if (btn.textContent.includes('Actualizar')) {
~        btn.addEventListener('click', function() {
~            alert('Skin actualizada.');
~        });
~    }
~});
~
~/* =========================
~   THEME CUSTOMIZER (VIP)
~   ========================= */
~document.querySelectorAll('.theme-color-option').forEach(option => {
~    option.addEventListener('click', function() {
~        const parent = this.parentElement;
~        parent.querySelectorAll('.theme-color-option').forEach(opt => opt.classList.remove('selected'));
~        this.classList.add('selected');
~        // Aquí podrías cambiar el color del tema dinámicamente
~    });
~});
~document.querySelectorAll('button').forEach(btn => {
~    if (btn.textContent.includes('Aplicar Tema')) {
~        btn.addEventListener('click', function() {
~            alert('Tema personalizado aplicado.');
~        });
~    }
~});
~
~/* =========================
~   LANGUAGE TOGGLE
~   ========================= */
~const languageToggle = document.getElementById('language-toggle');
~languageToggle.addEventListener('click', function() {
~    if (currentLanguage === 'es') {
~        currentLanguage = 'en';
~        languageToggle.innerHTML = '<i class="fas fa-globe mr-1"></i> EN';
~        alert('Traducción a inglés (demo)');
~    } else {
~        currentLanguage = 'es';
~        languageToggle.innerHTML = '<i class="fas fa-globe mr-1"></i> ES';
~        alert('Traducción a español (demo)');
~    }
~});
~
~/* =========================
~   OCULTAR ANUNCIOS SI ES VIP
~   ========================= */
~if (isVIP) {
~    const adLeft = document.getElementById('ad-left');
~    const adRight = document.getElementById('ad-right');
~    if (adLeft) adLeft.classList.add('hidden');
~    if (adRight) adRight.classList.add('hidden');
~}
~
~/* =========================
~   ESTRELLAS DE RATING EN REVIEWS
~   ========================= */
~const stars = document.querySelectorAll('[data-rating]');
~stars.forEach(star => {
~    star.addEventListener('click', function() {
~        const rating = parseInt(this.getAttribute('data-rating'));
~        stars.forEach((s, index) => {
~            if (index < rating) {
~                s.classList.remove('far');
~                s.classList.add('fas');
~            } else {
~                s.classList.remove('fas');
~                s.classList.add('far');
~            }
~        });
~    });
~});
~
~/* =========================
~   BOTÓN EDITAR PERFIL
~   ========================= */
~document.querySelectorAll('a').forEach(a => {
~    if (a.textContent.includes('Editar Perfil')) {
~        a.addEventListener('click', function(e) {
~            e.preventDefault();
~            document.getElementById('profile-modal').classList.remove('hidden');
~            // Carga datos actuales si existen
~            const profile = JSON.parse(localStorage.getItem('profile') || '{}');
~            document.getElementById('profile-name').value = profile.name || '';
~            document.getElementById('profile-color').value = profile.color || '#ffffff';
~            document.getElementById('profile-signature').value = profile.signature || '';
~        });
~    }
~});
~
~/* =========================
~   SIMULACIÓN DE ACTUALIZACIÓN DE ESTADÍSTICAS
~   ========================= */
~function updateServerStats() {
~    const playerCounts = document.querySelectorAll('.bg-green-100.text-green-800');
~    playerCounts.forEach(count => {
~        const parts = count.textContent.split('/');
~        const current = parseInt(parts[0].replace(/,/g, ''));
~        const max = parseInt(parts[1].replace(/,/g, ''));
~        const change = Math.floor(Math.random() * 20) - 10;
~        const newCount = Math.max(0, Math.min(current + change, max));
~        count.textContent = newCount.toLocaleString() + '/' + max.toLocaleString();
~    });
~}
~setInterval(updateServerStats, 5000);
~
~/* =========================
~   FIREBASE AUTH
~   ========================= */
~import { initializeApp } from "https://www.gstatic.com/firebasejs/10.11.0/firebase-app.js";
~import { getAuth, GoogleAuthProvider, signInWithPopup, signOut, onAuthStateChanged, createUserWithEmailAndPassword, signInWithEmailAndPassword, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.11.0/firebase-auth.js";
~
~const firebaseConfig = { /* tu config */ };
~const app = initializeApp(firebaseConfig);
~const auth = getAuth(app);
~
~const loginBtn = document.getElementById('login-google');
~const logoutBtn = document.getElementById('logout');
~const userInfo = document.getElementById('user-info');
~
~loginBtn.onclick = () => {
~    signInWithPopup(auth, new GoogleAuthProvider());
~};
~logoutBtn.onclick = () => {
~    signOut(auth);
~};
~
~onAuthStateChanged(auth, user => {
~    currentUser = user;
~    lockSocialFeatures();
~    if (user) {
~        loginBtn.classList.add('hidden');
~        logoutBtn.classList.remove('hidden');
~        userInfo.textContent = `Hola, ${user.displayName || user.email}`;
~        document.getElementById('edit-profile-btn').classList.remove('hidden');
~        // Mostrar inputs VIP si corresponde
~        const isVIP = getUserRole(user?.email) === 'vip';
~        document.getElementById('cover-label').style.display = isVIP ? 'block' : 'none';
~        document.getElementById('signature-gif-label').style.display = isVIP ? 'block' : 'none';
~    } else {
~        loginBtn.classList.remove('hidden');
~        logoutBtn.classList.add('hidden');
~        userInfo.textContent = '';
~        document.getElementById('edit-profile-btn').classList.add('hidden');
~    }
~});
~
~/* =========================
~   BLOQUEO DE FUNCIONES SOCIALES EN UI
~   ========================= */
~function requireAuth(action) {
~    if (!currentUser) {
~        document.getElementById('auth-modal').classList.remove('hidden');
~        if (action) document.getElementById('auth-modal').dataset.action = action;
~        return false;
~    }
~    return true;
~}
~function lockSocialFeatures() {
~    // Chat de ayuda
~    document.getElementById('help-input').disabled = !currentUser;
~    document.getElementById('help-send').disabled = !currentUser;
~    // Opiniones en servidores
~    document.querySelectorAll('.opiniones textarea, .opiniones button').forEach(el => el.disabled = !currentUser);
~    // Comentarios en noticias/foro
~    document.querySelectorAll('input[id^="input-"], button[data-comment]').forEach(el => el.disabled = !currentUser);
~}
~lockSocialFeatures();
~
~/* =========================
~   INTERFAZ DE AUTENTICACIÓN
~   ========================= */
~const authModal = document.getElementById('auth-modal');
~const tabLogin = document.getElementById('tab-login');
~const tabRegister = document.getElementById('tab-register');
~const loginForm = document.getElementById('login-form');
~const registerForm = document.getElementById('register-form');
~const closeAuth = document.getElementById('close-auth');
~const authMsg = document.getElementById('auth-msg');
~const forgotPass = document.getElementById('forgot-pass');
~const googleLogin = document.getElementById('google-login');
~
~// Tabs
~tabLogin.onclick = () => {
~    tabLogin.classList.add('bg-blue-600');
~    tabRegister.classList.remove('bg-blue-600');
~    loginForm.classList.remove('hidden');
~    registerForm.classList.add('hidden');
~    authMsg.textContent = '';
~};
~tabRegister.onclick = () => {
~    tabRegister.classList.add('bg-blue-600');
~    tabLogin.classList.remove('bg-blue-600');
~    registerForm.classList.remove('hidden');
~    loginForm.classList.add('hidden');
~    authMsg.textContent = '';
~};
~closeAuth.onclick = () => {
~    authModal.classList.add('hidden');
~    authMsg.textContent = '';
~};
~
~// Login
~loginForm.onsubmit = async (e) => {
~    e.preventDefault();
~    authMsg.textContent = '';
~    try {
~        await signInWithEmailAndPassword(auth, loginForm['login-email'].value, loginForm['login-password'].value);
~        authModal.classList.add('hidden');
~    } catch (err) {
~        authMsg.textContent = 'Error: ' + (err.message || 'No se pudo iniciar sesión');
~    }
~};
~
~// Registro
~registerForm.onsubmit = async (e) => {
~    e.preventDefault();
~    authMsg.textContent = '';
~    try {
~        await createUserWithEmailAndPassword(auth, registerForm['register-email'].value, registerForm['register-password'].value);
~        authMsg.textContent = '¡Cuenta creada! Revisa tu correo para verificar.';
~    } catch (err) {
~        authMsg.textContent = 'Error: ' + (err.message || 'No se pudo registrar');
~    }
~};
~
~// Google login
~googleLogin.onclick = async () => {
~    try {
~        await signInWithPopup(auth, new GoogleAuthProvider());
~        authModal.classList.add('hidden');
~    } catch (err) {
~        authMsg.textContent = 'Error: ' + (err.message || 'No se pudo iniciar sesión con Google');
~    }
~};
~
~// Olvidé mi contraseña
~forgotPass.onclick = async () => {
~    const email = loginForm['login-email'].value;
~    if (!email) {
~        authMsg.textContent = 'Ingresa tu correo para recuperar la contraseña.';
~        return;
~    }
~    try {
~        await sendPasswordResetEmail(auth, email);
~        authMsg.textContent = 'Correo de recuperación enviado.';
~    } catch (err) {
~        authMsg.textContent = 'Error: ' + (err.message || 'No se pudo enviar el correo');
~    }
~};
~
~/* =========================
~   BLOQUEA FUNCIONES SOCIALES SI NO ESTÁ AUTENTICADO
~   ========================= */
~document.getElementById('edit-profile-btn').onclick = () => {
~    if (!requireAuth()) return;
~    document.getElementById('profile-modal').classList.remove('hidden');
~    // ...carga datos...
~};
~document.getElementById('help-send').onclick = () => {
~    if (!requireAuth()) return;
~    // ...envía mensaje...
~};
~document.querySelectorAll('.opiniones button, button[data-comment]').forEach(btn => {
~    btn.onclick = (e) => {
~        if (!requireAuth()) {
~            e.preventDefault();
~            return false;
~        }
~    };
~});
~
~/* =========================
~   FUNCIONES DE UTILIDAD Y PARCHE
~   ========================= */
~function getUserRole(email) {
~    if (!email) return 'member';
~    if (email.endsWith('@admin.com')) return 'owner';
~    if (email.endsWith('@staff.com')) return 'staff';
~    if (email.endsWith('@vip.com')) return 'vip';
~    return 'member';
~}
~
~/* =========================
~   PREVENCIÓN DE ERRORES POR ELEMENTOS NULOS
~   ========================= */
~// Parche para evitar errores si algún elemento no existe
~function safeGet(id) {
~    return document.getElementById(id) || { classList: { add(){}, remove(){} }, style: {}, value: '', textContent: '', disabled: false };
~}
~
~/* =========================
~   EVITA DUPLICADOS Y ERRORES DE EVENTOS
~   ========================= */
~// Si necesitas limpiar eventos duplicados, puedes usar removeEventListener antes de agregar nuevos (no implementado aquí por simplicidad).
~
~/* =========================
~   FIN DE PARCHE Y REVISIÓN
~   ========================= */
~</script>
~    <!-- Firebase SDKs -->
~    <script type="module">
~    // =========================
~    // FIREBASE CONFIGURACIÓN Y UTILIDADES
~    // =========================
~    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.11.0/firebase-app.js";
~    import { getAuth, GoogleAuthProvider, signInWithPopup, signOut, onAuthStateChanged, createUserWithEmailAndPassword, signInWithEmailAndPassword, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.11.0/firebase-auth.js";
~    import { getFirestore, doc, setDoc, getDoc, updateDoc, collection, addDoc, query, orderBy, onSnapshot } from "https://www.gstatic.com/firebasejs/10.11.0/firebase-firestore.js";
~
~    // TODO: Cambia esto por tu config real
~    const firebaseConfig = {
~        apiKey: "TU_API_KEY",
~        authDomain: "TU_AUTH_DOMAIN",
~        projectId: "TU_PROJECT_ID",
~        storageBucket: "TU_BUCKET",
~        messagingSenderId: "TU_SENDER_ID",
~        appId: "TU_APP_ID"
~    };
~    const app = initializeApp(firebaseConfig);
~    const auth = getAuth(app);
~    const db = getFirestore(app);
~
~    // =========================
~    // ESTADO GLOBAL
~    // =========================
~    let currentUser = null;
~    let isVIP = false;
~
~    // =========================
~    // AUTENTICACIÓN
~    // =========================
~    const loginBtn = document.getElementById('login-google');
~    const logoutBtn = document.getElementById('logout');
~    const userInfo = document.getElementById('user-info');
~    loginBtn.onclick = () => signInWithPopup(auth, new GoogleAuthProvider());
~    logoutBtn.onclick = () => signOut(auth);
~
~    onAuthStateChanged(auth, async user => {
~        currentUser = user;
~        if (user) {
~            loginBtn.classList.add('hidden');
~            logoutBtn.classList.remove('hidden');
~            userInfo.textContent = `Hola, ${user.displayName || user.email}`;
~            document.getElementById('edit-profile-btn').classList.remove('hidden');
~            // Carga rol desde Firestore
~            const userDoc = await getDoc(doc(db, "users", user.uid));
~            isVIP = userDoc.exists() && userDoc.data().role === "vip";
~            document.getElementById('cover-label').style.display = isVIP ? 'block' : 'none';
~            document.getElementById('signature-gif-label').style.display = isVIP ? 'block' : 'none';
~        } else {
~            loginBtn.classList.remove('hidden');
~            logoutBtn.classList.add('hidden');
~            userInfo.textContent = '';
~            document.getElementById('edit-profile-btn').classList.add('hidden');
~            isVIP = false;
~        }
~        lockSocialFeatures();
~        toggleAds();
~    });
~
~    // =========================
~    // REGISTRO Y LOGIN EMAIL
~    // =========================
~    document.getElementById('login-form').onsubmit = async (e) => {
~        e.preventDefault();
~        try {
~            await signInWithEmailAndPassword(auth, e.target['login-email'].value, e.target['login-password'].value);
~            document.getElementById('auth-modal').classList.add('hidden');
~        } catch (err) {
~            document.getElementById('auth-msg').textContent = 'Error: ' + (err.message || 'No se pudo iniciar sesión');
~        }
~    };
~    document.getElementById('register-form').onsubmit = async (e) => {
~        e.preventDefault();
~        try {
~            const cred = await createUserWithEmailAndPassword(auth, e.target['register-email'].value, e.target['register-password'].value);
~            await setDoc(doc(db, "users", cred.user.uid), { email: cred.user.email, role: "member", created: Date.now() });
~            document.getElementById('auth-msg').textContent = '¡Cuenta creada!';
~        } catch (err) {
~            document.getElementById('auth-msg').textContent = 'Error: ' + (err.message || 'No se pudo registrar');
~        }
~    };
~    document.getElementById('forgot-pass').onclick = async () => {
~        const email = document.getElementById('login-email').value;
~        if (!email) return document.getElementById('auth-msg').textContent = 'Ingresa tu correo para recuperar la contraseña.';
~        try {
~            await sendPasswordResetEmail(auth, email);
~            document.getElementById('auth-msg').textContent = 'Correo de recuperación enviado.';
~        } catch (err) {
~            document.getElementById('auth-msg').textContent = 'Error: ' + (err.message || 'No se pudo enviar el correo');
~        }
~    };
~
~    // =========================
~    // BLOQUEO DE FUNCIONES SOCIALES
~    // =========================
~    function lockSocialFeatures() {
~        document.getElementById('help-input').disabled = !currentUser;
~        document.getElementById('help-send').disabled = !currentUser;
~        document.querySelectorAll('input[id^="input-"], button[data-comment]').forEach(el => el.disabled = !currentUser);
~    }
~    function toggleAds() {
~        if (isVIP) {
~            document.getElementById('ad-left')?.classList.add('hidden');
~            document.getElementById('ad-right')?.classList.add('hidden');
~        } else {
~            document.getElementById('ad-left')?.classList.remove('hidden');
~            document.getElementById('ad-right')?.classList.remove('hidden');
~        }
~    }
~
~    // =========================
~    // CHAT DE AYUDA EN TIEMPO REAL (Firestore)
~    // =========================
~    const helpMessagesDiv = document.getElementById('help-messages');
~    const helpInput = document.getElementById('help-input');
~    const helpSend = document.getElementById('help-send');
~    helpSend.onclick = async () => {
~        if (!currentUser) return;
~        const msg = helpInput.value.trim();
~        if (!msg) return;
~        await addDoc(collection(db, "help-chat"), {
~            user: currentUser.displayName || currentUser.email,
~            uid: currentUser.uid,
~            msg,
~            ts: Date.now()
~        });
~        helpInput.value = '';
~    };
~    onSnapshot(query(collection(db, "help-chat"), orderBy("ts", "desc")), snap => {
~        helpMessagesDiv.innerHTML = '';
~        snap.forEach(doc => {
~            const d = doc.data();
~            helpMessagesDiv.innerHTML += `<div class="chat-message mb-1"><b>${d.user}:</b> ${d.msg}</div>`;
~        });
~    });
~
~    // =========================
~    // COMENTARIOS EN NOTICIAS (Firestore)
~    // =========================
~    window.addComment = async function(newsId, text) {
~        if (!currentUser) return alert('Debes iniciar sesión');
~        if (!text.trim()) return;
~        await addDoc(collection(db, "news-comments"), {
~            newsId,
~            user: currentUser.displayName || currentUser.email,
~            uid: currentUser.uid,
~            text,
~            ts: Date.now()
~        });
~        document.getElementById('input-' + newsId).value = '';
~    };
~    function renderComments(newsId) {
~        const commentsDiv = document.getElementById('comments-' + newsId);
~        onSnapshot(query(collection(db, "news-comments"), orderBy("ts", "desc")), snap => {
~            commentsDiv.innerHTML = '';
~            snap.forEach(doc => {
~                const d = doc.data();
~                if (d.newsId === newsId) {
~                    commentsDiv.innerHTML += `<div class="chat-message mb-1"><b>${d.user}:</b> ${d.text}</div>`;
~                }
~            });
~        });
~    }
~    renderComments('news1');
~    // Repite para otras noticias si agregas más
~
~    // =========================
~    // FORO BÁSICO (Firestore)
~    // =========================
~    // Ejemplo: cargar posts del foro
~    function renderForum() {
~        const forumDiv = document.getElementById('forum');
~        onSnapshot(query(collection(db, "forum-posts"), orderBy("ts", "desc")), snap => {
~            // Aquí puedes renderizar los posts del foro dinámicamente
~            // Ejemplo: forumDiv.innerHTML = ...
~        });
~    }
~    renderForum();
~
~    // =========================
~    // GUARDADO DE PERFIL (Firestore)
~    // =========================
~    document.getElementById('save-profile').onclick = async () => {
~        if (!currentUser) return;
~        const name = document.getElementById('profile-name').value;
~        const color = document.getElementById('profile-color').value;
~        const signature = document.getElementById('profile-signature').value;
~        await setDoc(doc(db, "users", currentUser.uid), { name, color, signature }, { merge: true });
~        alert('Perfil guardado');
~        document.getElementById('profile-modal').classList.add('hidden');
~    };
~    document.getElementById('close-profile').onclick = () => {
~        document.getElementById('profile-modal').classList.add('hidden');
~    };
~
~    // =========================
~    // SKINS (solo simulado, para real usa Firebase Storage)
~    // =========================
~    // Puedes subir la skin a Firebase Storage y guardar la URL en Firestore
~    // Aquí solo se simula la selección
~    document.getElementById('skin-upload')?.addEventListener('change', e => {
~        const file = e.target.files[0];
~        if (file) alert('Skin seleccionada: ' + file.name + ' (subida real requiere Storage)');
~    });
~
    // =========================
    // SEO: Encabezados dinámicos
    // =========================
    document.querySelector('h1').textContent = "Mejores servidores de Minecraft Bedrock y Java";
    document.title = "ServidorCraft | Comunidad Minecraft";
    document.querySelector('h1').textContent = "Mine Of Servers: Mejores servidores de Minecraft Bedrock y Java";
    document.title = "Mine Of Servers | Comunidad Minecraft";";

    // =========================
    // RESPONSIVE: No requiere JS, ya está en Tailwind y CSS arriba
~    // =========================
~
~    // =========================
~    // MONETIZACIÓN: Ejemplo de botón de donación
~    // =========================
~    // Puedes agregar un botón de PayPal o Ko-fi en el sidebar o footer
~    </script>
    <!-- ...resto del HTML... -->
</body>
</html>
